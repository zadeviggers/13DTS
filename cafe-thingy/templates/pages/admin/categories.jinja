{% extends "base.jinja" %}
{% set title = "Admin - Categories" %}
{% block pageheading %}
    Categories
{% endblock pageheading %}
{% block main %}
    <div class="breadcrumbs">
        <a href="{{ url_for('handle_admin')}}" class="back-link">Admin</a>
    </div>
    <a href="{{ url_for('handle_admin_create_category')}}">Create a category</a>
    <section>
        <h2>Current categories ({{ categories|length }})</h2>
        <ul>
            {% for category in categories %}
                <li>
                    <a href="{{ url_for('handle_admin_category_info', category_id=category.id)}}">{{ category.name }} (#{{ category.id }})</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock main %}
